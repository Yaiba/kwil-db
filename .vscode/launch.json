{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Kwil API",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/kwild",
            "debugAdapter": "dlv-dap",
            "showLog": true,
            "dlvFlags": [
                "--only-same-user=false"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Kwil API Gateway",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/kwild-gateway",
            "debugAdapter": "dlv-dap",
            "showLog": true,
            "dlvFlags": [
                "--only-same-user=false"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Kwil CLI",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/kwil",
            "debugAdapter": "dlv-dap",
            "showLog": true,
            "console": "integratedTerminal",
            "dlvFlags": [
                "--only-same-user=false"
            ],
            "args": [
                "schema",
                "diff",
                "--to",
                ".data/first.hcl",
                "--from",
                "postgres://localhost:5432/postgres?sslmode=disable",
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}